<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HealthDash">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:alpha="0.2"

        android:src="@drawable/health_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:id="@+id/imgb"
            android:src="@drawable/banner_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:text="Last checked"


            android:textColor="#000000"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="0dp"
            android:id="@+id/lastchecked"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:text="Loading .."
            />

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:text="Status"

                android:textColor="#000000"
                android:textSize="20sp"/>

            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:padding="10dp"
                android:textSize="25dp"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Loading.."
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center"
            >
        <Button
            android:layout_width="130dp"
            android:id="@+id/uploadBtn"
            android:layout_height="wrap_content"
            android:text="Upload New"
            android:textColor="@color/white"
            android:background="@color/bg_slider_screen1"/>

        </LinearLayout>










    </LinearLayout>


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:textColor="#ffffff"
        android:textSize="24sp"

        android:text="My Health Status" />
</RelativeLayout>